---
import { onMount } from 'solid-js';
import { initTheme, toggleTheme } from '../starlight-theme/theme-toggle.js';

// This layout can wrap Starlight content; import its styles and init theme on mount.
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/src/starlight-theme/styles.css" />
    <title>Docs</title>
  </head>
  <body>
    <div class="starlight-header" style="display:flex;align-items:center;gap:12px;padding:0.75rem 1rem;">
      <slot name="header">
        <button class="theme-toggle" on:click={toggleTheme}>Toggle theme</button>
      </slot>
    </div>
    <main style="padding:1rem;">
      <div class="st-theme-surface">
        <slot />
      </div>
    </main>

    <script type="module">
      import { initTheme } from '/src/starlight-theme/theme-toggle.js';
      initTheme();
    </script>
  </body>
</html>
