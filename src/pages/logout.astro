---
export const prerender = false; // Opt out of static generation for server-side cookie handling

import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { Card } from '@astrojs/starlight/components';

// Clear the authentication cookie
Astro.cookies.delete('wri-auth');
---

<StarlightPage frontmatter={{
  title: "Logged Out",
  description: "You have been logged out of the WRI Internal Communications Playbook",
  template: "splash"
}}>
  <div style="max-width: 500px; margin: 0 auto;">
    
    <Card title="Logged Out" icon="information">
      <p>You have been successfully logged out of the WRI Internal Communications Playbook.</p>
      
      <div style="margin-top: 1.5rem; text-align: center;">
        <a 
          href="/"
          style="
            display: inline-block;
            background: var(--wri-gold-bg); 
            color: white; 
            text-decoration: none;
            padding: 0.75rem 1.5rem; 
            border-radius: 6px; 
            font-weight: 500;
          "
        >
          Return to Homepage
        </a>
      </div>
    </Card>
    
  </div>
</StarlightPage>
